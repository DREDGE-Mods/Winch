<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>net48</TargetFramework>
		<AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
		<AppendRuntimeIdentifierToOutputPath>false</AppendRuntimeIdentifierToOutputPath>
		<LangVersion>11</LangVersion>
		<AllowUnsafeBlocks>true</AllowUnsafeBlocks>
		<AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
		<AppendRuntimeIdentifierToOutputPath>false</AppendRuntimeIdentifierToOutputPath>
		<CopyLocalLockFileAssemblies>false</CopyLocalLockFileAssemblies>
		<Nullable>enable</Nullable>
		<NuspecFile>Winch.nuspec</NuspecFile>
		<GenerateDocumentationFile>True</GenerateDocumentationFile>
		<NoWarn>1591</NoWarn>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="DredgeGameLibs" Version="1.4.2" />
		<PackageReference Include="HarmonyX" Version="2.10.1" />
		<PackageReference Include="Newtonsoft.Json" Version="13.0.1" />
	</ItemGroup>

	<ItemGroup>
	  <Content Include="Assets\**\*.*">
		<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
	  </Content>
	  <None Include="mod_meta.json">
	    <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
	  </None>
		<None Include="doorstop_config.ini">
			<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
		</None>
		<None Include="Winch.csproj.user" />
	</ItemGroup>

	<ItemGroup>
		<DLLs Include="$(ProjectDir)lib\*.*"></DLLs>
	</ItemGroup>

	<Target Name="CopyDLLs" AfterTargets="Build">
		<Copy SourceFiles="@(DLLs)" DestinationFolder="$(OutputPath)" />
	</Target>

	<ItemGroup>
		<ProjectReference Include="..\WinchCommon\WinchCommon.csproj">
		</ProjectReference>
	</ItemGroup>
	<ItemGroup>
		<DLLFiles Include="$(TargetDir)\*.*"/>
		<AssetsFiles Include="$(TargetDir)\Assets\**\*.*"/>
	</ItemGroup>
	<ItemGroup>
	  <Folder Include="bin\" />
	</ItemGroup>
	
	<Target Name="MoveDllToPlugins" AfterTargets="Build">
		<Message Text="Copying to Folder..." Importance="High"/>

		<Copy SourceFiles="@(DLLFiles)"
			  DestinationFolder="C:\Program Files (x86)\Steam\steamapps\common\DREDGE\Winch\"/>
		<Copy SourceFiles="@(AssetsFiles)"
			  DestinationFolder="C:\Program Files (x86)\Steam\steamapps\common\DREDGE\Winch\Assets\"/>
		
	</Target>
</Project>
